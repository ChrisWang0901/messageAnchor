{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "lib": ["DOM", "ES2022"],
      "strict": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": ["chrome"],
      "outDir": "dist",
      "sourceMap": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  